mixin uploadBtn(idBtn = "", classBtn = "", text = "")
    .upload(class= classBtn)
        label(for= idBtn).button
            img.btn-upload-icon(src="./images/icons/icon-upload.svg", alt="")   
            if text        
                span.btn-upload-text= text
        input(type="file", name="", id= idBtn).upload-input

