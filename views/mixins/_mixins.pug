mixin menuItem(text, icon = "", href = "#")
    li.menu-item
        a.menu-link(href= href)
                span.menu-icon 
                    if icon 
                        case icon 
                            when "icon-home"
                                include ../icons/_icon-home
                            when "icon-trending"
                                include ../icons/_icon-trending
                            when "icon-topic"
                                include ../icons/_icon-topic
                            when "icon-playlist"
                                include ../icons/_icon-playlist
                            when "icon-subcrtion"
                                include ../icons/_icon-subcrtion
                            when "icon-dashboard"
                                include ../icons/_icon-dashboard
                            when "icon-episode"
                                include ../icons/_icon-episode
                            when "icon-team"
                                include ../icons/_icon-team
                            when "icon-subcrer"
                                include ../icons/_icon-subcrer
                            when "icon-medal"
                                include ../icons/_icon-medal
                span.menu-text=text

mixin toggle()
    .toggle
        .toggle-spinner

mixin buttonPrimary(text = "", icon = false) 
    .button.button-primary.button--primary 
        if icon 
            include ../icons/_icon-play
        if text
            span= text 

mixin feedItem(name, rating = 4) 
    .feed-item
        .feed-item-header
            .feed-author 
                .feed-author-avatar
                    img(src="./images/img-host-user.png", alt="")
                    span.feed-author-verify    
                        include ../icons/_icon-verify
                .feed-author-content 
                    .feed-author-header
                        h4.feed-author-name= name
                        .feed-author-rating
                            span rated an episude 
                            .feed-author-stars
                                - for (var i = 0; i < rating; i++)
                                    img(srcSet="./images/img-rating-star.png 2x", alt="rating-star")
                    .feed-date Jun 25th
            span.icon 
                include ../icons/_icon-more
        .feed-item-main
            .feed-image
                img(srcSet="./images/thumb1.png 2x", alt="thumbnail")
            .feed-item-content 
                .feed-item-share.icon
                    include ../icons/_icon-share
                p.feed-item-type Perspective Podcast (Ep. 1)
                h3.feed-item-heading Philosophy vs Religion vs Science: Yahia Amin and Sadman Sadik
                .feed-item-time 
                    .feed-item-time-ago
                        include ../icons/_icon-clock
                        p 11 days ago
                    .feed-item-time-long 
                        include ../icons/_icon-sandClock
                        p 
                            span.feed-item-long-min 45 
                            | mins 
                            span.feed-item-long-sec 10 
                            | secs
                .feed-item-desc Play Philosophy vs Religion vs Science: Perspective Podcast (Ep. 1) | Yahia Amin and Sadman Sadik by PERSPECTIVE with Yahia Amin on desktop and mobile. Play over 265 million tracks for...
        .feed-item-footer
            .feed-item-footer-icons 
                span.icon.icon-heart
                    include ../icons/_icon-heart
                span.icon 
                    include ../icons/_icon-star
                span.icon 
                    include ../icons/_icon-list
            //- .feed-item-footer-button.button.button-primary.button--primary 
            //-     include ../icons/_icon-play
            //-     span.feed-item-footer-text Play Episode
            +buttonPrimary("Play Episode", true)

mixin widget-header(title = "", url = "#") 
    .widget-header 
        h3.widget-heading.heading= title
        if url 
            a.widget-view-all(href= url) 
                span.widget-view-all-text View all 
                include ../icons/_icon-cheveron-right

